@{
}
@{
    ViewData["Title"] = "Edit";
}
@model WebAppTextEditor.Models.EditorModel
<h2>
    Edit Your Document
</h2>
<div>
    <h6>@Html.DisplayNameFor(model => model.ContentDetails) </h6>

</div>
<div>


    <h2 class="border rounded text-center text-white my-3 p-2" style="background-color :#08618d;">Create Article</h2>
    <form method="post">
        <div class="row-mb-3">
            <label class="col-sm-4 col-form-label">Content</label>
            <div class="col-sm-8">
                <textarea asp-for="ContentDetails" id="tiny" style="width:1100px;height:380px" name="ContentDetails" value="@Model.ContentDetails"></textarea>
                <span asp-validation-for="ContentDetails" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>